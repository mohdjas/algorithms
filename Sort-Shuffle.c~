#include "sorthelper.c"

int main (int argc, char *argv[])
{
        int array[ARRAY_SIZE];
        register int i = 0;
        
        for (i = 0; i < ARRAY_SIZE; i++) { array[i] = i+1; }
        print_array(array);
        
        for (i = 1; i < ARRAY_SIZE; i++)
        {
                srand(time(NULL));
                int r = rand()%i + 1;
                exch(array, i, r);
                print_array(array);
        }
        
        
        return 0;
}
